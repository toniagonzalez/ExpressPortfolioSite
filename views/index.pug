extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 FullStack Javascript Projects

      p.lead.text-light
        | Each project features the versatility and power of JavaScript, HTML, & CSS.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href='/projects/' + project.id)
            img.thumbnail(src=project.img_urls[0] alt='thumbnail of ' + project.project_name)
            h5 #{project.project_name}
